<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:weightSum="1"
    android:padding="4dp">

    <ImageView
        android:layout_width="25dp"
        android:layout_height="35dp"
        android:id="@+id/imageDocIcon"
        android:src="@mipmap/ic_file_document_box_grey600_18dp"
        android:layout_marginLeft="3dp"
        android:layout_marginStart="3dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        />

    <TextView
        android:layout_width="230dp"
        android:layout_height="45dp"
        android:text="@string/tvName"
        android:id="@+id/tvName"
        android:textSize="18dp"
        android:layout_alignTop="@+id/imageDocIcon"
        android:textAlignment="gravity"
        android:layout_toLeftOf="@+id/tvPriority"
        android:layout_toRightOf="@+id/imageDocIcon"
        android:layout_toEndOf="@+id/imageDocIcon" />

    <TextView
        android:layout_width="90dp"
        android:layout_height="17dp"
        android:text="@string/tvPriority"
        android:id="@+id/tvPriority"
        android:textSize="12dp"
        android:textColor="@color/colorPrimary"
        android:textAlignment="center"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tv_DueDate"
        android:id="@+id/tvDueDate"
        android:textSize="12dp"
        android:textAlignment="center"
        android:textColor="@color/colorPrimary"
        android:layout_below="@+id/tvPriority"
        android:layout_alignLeft="@+id/tvPriority"
        android:layout_alignStart="@+id/tvPriority"
        android:layout_alignRight="@+id/tvPriority"
        android:layout_alignEnd="@+id/tvPriority" />


</RelativeLayout>